{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "crlf",
    "indentStyle": "space"
  },
  "files": {
    "ignore": ["src/*.gen.ts"]
  }
}
